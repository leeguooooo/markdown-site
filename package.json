{
  "name": "markdown-preview",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:verbose": "DEBUG=* VERBOSE=true next dev --turbopack",
    "dev:debug": "NODE_OPTIONS='--inspect' DEBUG=* next dev --turbopack",
    "prebuild": "node scripts/deployment/pre-build-check.js",
    "build": "next build",
    "build:force": "next build",
    "build:safe": "bash scripts/deployment/safe-build.sh",
    "start": "next start",
    "start:verbose": "DEBUG=* VERBOSE=true next start",
    "start:debug": "NODE_OPTIONS='--trace-warnings --trace-deprecation' DEBUG=* next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "pm2:start": "node scripts/deployment/pm2-start.js prod",
    "pm2:dev": "node scripts/deployment/pm2-start.js dev",
    "pm2:verbose": "pm2 start ecosystem.config.js --env development --log-type json",
    "pm2:stop": "pm2 stop docs-platform",
    "pm2:restart": "pm2 restart docs-platform",
    "pm2:delete": "pm2 delete docs-platform",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs docs-platform",
    "pm2:logs:verbose": "pm2 logs docs-platform --lines 100",
    "pm2:logs:follow": "pm2 logs docs-platform --lines 0",
    "pm2:monit": "pm2 monit",
    "pm2:flush": "pm2 flush docs-platform",
    "pm2:reload": "pm2 reload docs-platform",
    "debug:env": "node scripts/development/debug-env.js",
    "debug:auth": "node scripts/security/verify-password.js",
    "debug:logs": "bash scripts/development/view-logs.sh",
    "security:setup": "bash scripts/security/update-security.sh",
    "security:verify": "node scripts/security/verify-password.js",
    "security:hash": "node scripts/security/generate-password-hash.js",
    "quick-start": "bash scripts/quick-start.sh",
    "watch:docs": "node scripts/development/watch-docs.js",
    "prod:watch": "pnpm build && pnpm pm2:start && pnpm watch:docs",
    "test:login": "bash scripts/development/test-login.sh",
    "test:api": "curl -X POST http://localhost:3001/api/auth/login -H 'Content-Type: application/json' -d '{\"password\":\"test\"}'",
    "clean": "rm -rf .next && rm -rf logs/*.log",
    "clean:pm2": "pm2 delete all && pm2 flush",
    "reset": "pnpm clean && pnpm clean:pm2 && pnpm install"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "fs": "0.0.1-security",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.511.0",
    "marked": "^15.0.12",
    "mermaid": "^11.6.0",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
